local Players = game:GetService("Players")
local player = Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local backpack = player:WaitForChild("Backpack")

-- X√≥a Tool c≈© n·∫øu c√≥
if backpack:FindFirstChild("Delete") then
	backpack.Delete:Destroy()
end

-- T·∫°o Tool
local tool = Instance.new("Tool")
tool.Name = "Delete"
tool.RequiresHandle = false
tool.CanBeDropped = false
tool.Parent = backpack

-- Bi·∫øn theo d√µi Part ƒë√£ ch·ªçn
local selectedPart = nil
local outline = nil
local lastClickTime = 0

-- √Çm thanh n·ªÅn khi x√≥a (ID c√≥ th·ªÉ thay ƒë·ªïi)
local DELETE_SOUND_ID = "rbxassetid://5137964328" -- üü¢ Sound m·ªõi, thay b·∫±ng ID b·∫°n mu·ªën

local function playDeleteSound()
	local sound = Instance.new("Sound")
	sound.SoundId = DELETE_SOUND_ID
	sound.Volume = 1
	sound.PlayOnRemove = true
	sound.Parent = workspace
	sound:Destroy() -- T·ª± ph√°t v√† xo√° sau
end

-- T·∫°o Highlight
local function createOutline(part)
	if outline then outline:Destroy() end
	outline = Instance.new("Highlight")
	outline.FillTransparency = 1
	outline.OutlineColor = Color3.fromRGB(255, 50, 50)
	outline.OutlineTransparency = 0
	outline.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
	outline.Parent = part
end

-- Xo√° Highlight
local function clearOutline()
	if outline then outline:Destroy() end
	outline = nil
	selectedPart = nil
end

-- Khi equip tool
tool.Equipped:Connect(function(mouse)
	mouse.Button1Down:Connect(function()
		local target = mouse.Target
		if target and target:IsA("BasePart") then
			local now = tick()

			if target == selectedPart and (now - lastClickTime) <= 1 then
				-- ·∫§n l·∫ßn 2: xo√°
				playDeleteSound()
				target:Destroy()
				clearOutline()
			else
				-- ·∫§n l·∫ßn ƒë·∫ßu ho·∫∑c part kh√°c
				selectedPart = target
				createOutline(target)
				lastClickTime = now
			end
		end
	end)
end)

tool.Unequipped:Connect(function()
	clearOutline()
end)